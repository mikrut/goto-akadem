<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.mail.park.chat.activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:id="@+id/user_picture"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_user_picture"/>

        <ImageButton
            android:id="@+id/user_camera_shot"
            android:contentDescription="Make photo"
            android:layout_width="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_camera_enhance_black_48dp"/>

        <ImageButton
            android:id="@+id/user_upload_picture"
            android:contentDescription="Upload photo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_folder_black_48dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Login"
            android:id="@+id/login_helper" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voloshin"
            android:id="@+id/user_login"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="E-Mail"
            android:id="@+id/email_helper" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="d.voloshin@corp.mail.ru"
            android:id="@+id/user_email"
            android:inputType="textWebEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="First Name"
            android:id="@+id/first_name_helper" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Dmitry"
            android:ems="10"
            android:id="@+id/first_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Name"
            android:id="@+id/last_name_helper" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Voloshin"
            android:ems="10"
            android:id="@+id/last_name" />

        <View
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>
